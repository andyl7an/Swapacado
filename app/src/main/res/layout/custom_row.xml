<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/xml_customRow"
    >
    <!--Holds All non contact and make an offer button-->
    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aalok"
            android:id="@+id/postCard_name"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.1 miles"
            android:layout_gravity="center"
            android:id="@+id/postCard_distance"
            android:textColor="@android:color/black"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/egg"
            android:id="@+id/postCard_egg"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Date"
            android:id="@+id/postCard_postDate"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postCard_have"
            android:layout_marginTop="36dp"
            android:text="I have: memes"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postCard_want"
            android:text="I want: eggplant"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:layout_marginBottom="40dp"
        android:id="@+id/postCard_contact"
        android:textAllCaps="false"
        android:onClick="contactButtonTriggered"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swap"
        android:id="@+id/postCard_swap"
        android:textAllCaps="false"
        />
    </LinearLayout>
    <!--Holds contact and make an swap button-->


</LinearLayout>